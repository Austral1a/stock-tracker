<h1>My portfolio</h1>
<div class="search-area">
  <h3>Search stocks</h3>
  <%= form_tag search_stock_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :stock, params[:stock],
                           placeholder: "Stock ticker symbol",
                           autofocus: true,
                           class: "form-control form-control-lg no-right-border-radius" %>
      </div>
      <div class="col-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-success btn-lg no-left-border-radius" do %>
          <%= 'Search' %>
        <% end %>
      </div>
    </div>
  <% end  %>
</div>
<div id="results">

</div>

<%= render 'stocks/list' %>