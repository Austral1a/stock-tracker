<div class="row">
  <div class="col-9">
    <table class="table table-bordered table-hover">
      <thead>
      <tr>
        <th scope="col">Email</th>
        <th scope="col">Name</th>
        <th scope="col">Surname</th>
        <th scope="col">Actions</th>
      </tr>
      </thead>
      <tbody>
      <% if !@tracked_friends.empty? %>
        <% @tracked_friends.each do |friend| %>
          <tr>
            <th scope="row"><%= friend.email %></th>
            <td><%= friend.first_name %></td>
            <td><%= friend.last_name %></td>
            <td><%= link_to "Stop following", friendship_path(friend), method: :delete,
                            data: {confirm: "Are you sure?"},
                            class: "btn btn-sm btn-warning" %></td>
          </tr>
        <% end %>
      <% else %>
        <tr><td>There are nothing yet.</td></tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
